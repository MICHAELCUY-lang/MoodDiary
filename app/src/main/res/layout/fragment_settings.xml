<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tampilan &amp; Tema"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <Switch
        android:id="@+id/switch_dark_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aktifkan Dark Mode"
        android:textSize="16sp"
        android:paddingVertical="12dp"
        android:paddingHorizontal="4dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginVertical="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pengaturan Reminder Harian"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <Switch
        android:id="@+id/switch_daily_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aktifkan Pengingat"
        android:textSize="16sp"
        android:paddingVertical="12dp"
        android:paddingHorizontal="4dp"/>

    <TextView
        android:id="@+id/tv_reminder_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Waktu Pengingat: 20:00"
        android:textSize="16sp"
        android:paddingVertical="8dp"
        android:clickable="true"
        android:focusable="true"/>

</LinearLayout>